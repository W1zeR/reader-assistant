<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="5-create-table-profiles-roles" author="w1zer">
        <createTable tableName="profiles_roles">
            <column name="id_profile" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="id_role" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id_profile"
                                 baseTableName="profiles_roles"
                                 constraintName="fk_pr_to_profile"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseColumnNames="id_role"
                                 baseTableName="profiles_roles"
                                 constraintName="fk_pr_to_role"
                                 referencedColumnNames="id"
                                 referencedTableName="role"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>