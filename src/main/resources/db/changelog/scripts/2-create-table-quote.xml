<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2-create-table-quote" author="w1zer">
        <createTable tableName="quote">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="content" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="varchar(50)"/>
            <column name="source" type="varchar(50)"/>
            <column name="description" type="varchar(300)"/>
            <column name="id_profile" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id_profile"
                                 baseTableName="quote"
                                 constraintName="fk_quote_to_profile"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
