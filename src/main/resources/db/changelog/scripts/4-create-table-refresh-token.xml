<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="4-create-table-refresh-token" author="w1zer">
        <createTable tableName="refresh_token">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="id_profile" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="clob">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiry_date" type="timestamptz">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id_profile"
                                 baseTableName="refresh_token"
                                 constraintName="fk_rt_to_profile"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>